@model List<RentalAgency.Models.Movie>
<!DOCTYPE html>
<html>
<head>
    @{
      ViewBag.Title = "Movies";
    }
    <meta charset="utf-8" />
</head>
<body>
    
    <section class="movie-container">
        
        <header class="movie-header">
            <h3 class="movie-list-title">List of Movies</h3>
        </header>
        
        @foreach (var movie in Model) {
            @Html.ActionLink(@movie.Name, "Details",
           new { movie.Id },
           new { @style = "background:url(" + movie.ImageUrl + ");", @class = "movie-flex" });
        }

    </section>

</body>
</html>